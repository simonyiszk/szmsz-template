%creating paragraphs --> \newpara
\newcommand{\newpara}{\vskip 2mm}

%add pdf's --> \addpdf
\newcommand*\addpdf[1]{
\includepdf[pages=-]{#1}}

%add pdf's in landscape --> \addpdflandscape
\newcommand*\addpdflscape[1]{
\begin{landscape}
\newgeometry{margin=0cm}
\includepdf[pages=-,angle=90]{#1}
\end{landscape}}

